# This is the top-most .editorconfig file; do not search in parent directories.
root = true

[*]
end_of_line = LF
{% if indent_style == "space" %}
indent_style = space
{% else %}
indent_style = tab
{% endif %}
indent_size = {% indent_size %}
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

{% if indent_size != 4 %}
[*.{rs,python,php}]
indent_size = 4
{% endif %}

{% if indent_size != 2 %}
[Gemfile]
indent_size = 2

[*.{rb,ru,ex,exs}]
indent_size = 2
{% endif %}

{% if indent_style == "space" %}
[Makefile]
indent_style = tab

[*.go]
indent_style = tab
{% endif %}
